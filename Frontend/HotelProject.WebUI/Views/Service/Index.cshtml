@model List<ListServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hizmet Başlığı</th>
        <th>İşlem</th>
        
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Title</td>

            <td>
                <div class="btn-group mb-1">
                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">İşlem</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Service/DeleteService/@item.ServiceId">Sil</a> <a class="dropdown-item" href="/Service/UpdateService/@item.ServiceId">Güncelle</a>
                      

                    </div>
                </div>
            </td>
           
        </tr>
    }

</table>
<a href="/Service/AddService/" class="btn mb-1 btn-rounded btn-outline-warning">Yeni Hizmet Ekle </a>

