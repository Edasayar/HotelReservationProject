@model List<StaffVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvan</th>
        <th>İşlem</th>
       
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.StaffId</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>
                <div class="btn-group mb-1">
                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">İşlem</button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/Staff/DeleteStaff/@item.StaffId">Sil</a> <a class="dropdown-item" href="/Staff/UpdateStaff/@item.StaffId">Güncelle</a>
                        <a class="dropdown-item" href="#">Detay</a>

                    </div>
                </div>
            </td>
        </tr>
    }

</table>
<a href="/Staff/AddStaff/" class="btn mb-1 btn-rounded btn-outline-warning">Yeni Personel Ekle </a>

