@model List<HotelProject.WebUI.Dtos.AppUserDto.ResultAppUserWorkLocationDto>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th># Ad Soyad</th>
            <th>Çalıştığı Şube</th>
            <th>Şehir</th>
            <th>Ülke</th>
            <th>Cinsiyet</th>
            <th>Durum</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">
                    @item.Name @item.Surname
                </td>
                <td>
                    <span>@item.WorkLocationName</span>
                </td>
                <td>
                    <span>@item.City</span>
                </td>
                <td>
                    <span>@item.Country</span>
                </td>

                @if (item.Gender == "Erkek")
                {
                    <td><i class="fa fa-circle-o text-warning mr-2"></i>@item.Gender</td>
                }
                @if (item.Gender == "Kadın")
                {
                    <td><i class="fa fa-circle-o text-success mr-2"></i>@item.Gender</td>
                }



                <td><i class="fa fa-circle-o text-success mr-2"></i>Aktif</td>

