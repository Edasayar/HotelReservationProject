            <div class="btn-group mb-1">
            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">İşlem</button>
            <div class="dropdown-menu">
            <a class="dropdown-item" href="/AdminRoom/DeleteRoom/@item.Id">Sil</a> <a class="dropdown-item" href="/AdminUsers/UpdateUser/@item.Id">Güncelle</a>

            </div>
            </div>
            </td> *@


            </tr>
        }

    </tbody>
</table>
