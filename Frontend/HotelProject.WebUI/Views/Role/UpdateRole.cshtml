@model HotelProject.WebUI.Models.Role.UpdateRoleVM
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rol Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for=Id />
    <label>Rol Adı</label>
    <input type="text" asp-for="RoleName" class="form-control" />
    <span asp-validation-for="RoleName" class="text-danger"></span>
    <br />


    <button class="btn mb-1 btn-rounded btn-outline-success">Rol Güncelle </button>
</form>